//1.
const pergunta = prompt("olá, qual sua idade?");
let idade = 28;

const pessoa = {
nome: "Franciele",
idade: 28,
maiorDeIdade: true,
}
if (pessoa.idade >=18 && pessoa.maiorDeIdade){
  console.log (`${pessoa.nome} você é maior de idade!`)
} else{
  console.log(`${pessoa.nome} você é menor de idade!`)
}

//2.
const frase = prompt ("qual turno do dia você estuda?"); // m t n 

if(frase === "M"){
console.log("estuda no matutino");
}else if (frase === "T"){
console.log("estuda na tarde");
}else if (frase === "N"){
console.log("estuda no noturno")
}else{
console.log("nenhuma das opções")
}


///3.
switch (frase) {
  case 'M':
    console.log('matutino')
    
    break
case 'T':
  console.log('tarde')
  break
case 'N':
  console.log('Noturno')
  break
  default:
    console.log('turno não encontrado')
    break;
}

//4.
const aluno = {
  nome: 'Franciele',
  idade: 28,
  tipoDeCurso: 'ti',
  temBolsa:true,

}
if (aluno.idade <=30) {
  if(aluno.temBolsa === false){
    if(aluno.tipoDeCurso === "graduacao"){
      console.log(`${aluno.idade} você pode se candidatar a uma bolsa de estudos!`)
    }
  }
}else {
  console.log(`${aluno.idade} Desculpe, você não atende aos requisitos para a bolsa`)
}

